 <div class="container">
 <section id="new-post">
    <form role="form" action="/posts" method="post">
      <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea class="form-control" rows="5" id="comment" name="body"></textarea>
        <label class="labelform" for="name">Name:</label>
        <textarea class="form-control" rows="1" id="comment" name="name"></textarea>
        <br>
      	<button type="submit" class="btn btn-info" value="Add Post" id="buttonsub">Add Post</button>
      </div>
    </form>
  </section>

<section class="container">
    <section class="row">
        <section class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <hr>
        <% @posts.reverse.each do |post| %>
        <section class="mini"></section>
            <section class="post-preview">
                    <h2 class="post-subtitle">
                        <%= post.body %>
                    </h2>
                <p class="post-meta">Posted by <%= post.name %> on  <%= post.created_at.to_s.chars[0..15].each_slice(10).to_a.rotate.flatten.drop(1).insert(5, " ").join %></p>
            </section>
            <hr>
              <% end %>
            <ul class="pager">
                <li class="next">
                    <a href="#">Older Posts &rarr;</a>
                </li>
            </ul>
        </section>
    </section>
</section>
